<table id="dg{{n}}" class="easyui-datagrid"></table>
<div id="tb{{n}}" style="display: none">
    <a id="dg{{n}}_reload" href="#" class="easyui-linkbutton" iconCls="icon-reload" plain="true">{{T('Ricarica')}}</a>
    <a id="dg{{n}}_insert" href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" {% if (dg_inline==1) %}onclick="javascript:$('#dg{{n}}').edatagrid('addRow'){% endif %}">{{T('Inserisci')}}</a>
    <a id="dg{{n}}_delete" href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" {% if (dg_inline==1) %}onclick="javascript:$('#dg{{n}}').edatagrid('destroyRow'){% endif %}">{{T('Elimina')}}</a>
    <a id="dg{{n}}_update" href="#" class="easyui-linkbutton" iconCls="icon-save" plain="true" {% if (dg_inline==1) %}onclick="javascript:$('#dg{{n}}').edatagrid('saveRow'){% endif %}">{{T('Salva')}}</a>
    <a href="#" class="easyui-linkbutton" iconCls="icon-undo" plain="true" {% if (dg_inline==1) %}onclick="javascript:$('#dg{{n}}').edatagrid('cancelRow'){% endif %}">{{T('Annulla')}}</a>
    <a id="dg{{n}}_export" class="easyui-linkbutton"  data-options="iconCls:'icon-excel1',plain:true">{{T('Esporta')}}</a>
</div>
